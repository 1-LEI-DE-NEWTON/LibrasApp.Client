@typeparam TContent
@* Componente abstrato para dividir partes de uma reação química *@

<div class="reaction-parts-container">
    @foreach (var part in Parts)
    {
        <section class="reaction-part">
            <h2>@part.Title</h2>
            <div class="reaction-part-content">
                @part.Content
            </div>
        </section>
    }
</div>

@code {
    [Parameter] public List<ReactionPart> Parts { get; set; } = new();

    public class ReactionPart
    {
        public string Title { get; set; } = string.Empty;
        public RenderFragment? Content { get; set; }
    }
}

<style>
.reaction-parts-container {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    margin: 2rem auto;
    max-width: 800px;
}
.reaction-part {
    background: #f5f5f5;
    border-radius: 1.2rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
    padding: 2rem 2.5rem;
}
.reaction-part h2 {
    margin-top: 0;
    color: #1976d2;
    font-size: 1.5rem;
}
.reaction-part-content {
    margin-top: 1rem;
    font-size: 1.15rem;
}
</style>
